<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">


    <androidx.cardview.widget.CardView

        android:layout_marginTop="10dp"

        android:id="@+id/cv_cardview"
        android:layout_width="400dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp">
<!--        app:cardElevation="20dp">-->

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LinearLayout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/shop_Img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/shopName_Text"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/lighblack"
                        android:textSize="18dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/orderTime_Text"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/lighblack"
                        android:textSize="10dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/orderHasGet_Text"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:textColor="@color/lighblack"
                    android:textSize="12dp"/>

            </LinearLayout>


            <TextView
                android:layout_width="350dp"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                android:text="—————————————————————————————————"
                android:textAlignment="center"
                android:textColor="@color/lighblack"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/goodName_Text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="75dp"
                    android:textColor="@color/lighblack"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/price_Text"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/lighblack"
                    android:textStyle="bold" />

            </LinearLayout>
            <Button
                android:id="@+id/oneMore_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="再来一单"
                android:background="@drawable/bottom4_edge"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/blue"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>
